declare 
	cursor c is select prj_id,task_name from task1;
begin
	for i in c
	loop
		dbms_output.put_line(i.prj_id||'  ' ||i.task_name);
	end loop;
end;
/
output;
P1  Design Phase
P1  Development Phase
P2  Design Phase
P3  Development Phase
