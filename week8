8.4)
declare
	cursor c(v_job varchar2, v_dept_no varchar2) is select * from emp1 where job=v_job and deptno=v_dept_no;
begin
	for i in c('&v_job', '&v_dept_no')
	loop
		DBMS_OUTPUT.PUT_LINE(i.ename);
	end loop;
end;
/

output:
Mahesh

________________________________________________________________________
8.5)
declare 
	cursor c(v_prj_id varchar2) is select ename,sal,deptno from emp1 where prj_id=v_prj_id;
begin
	for i in c('&v_prj_id')	
	loop
		dbms_output.put_line(i.ename||' '||i.sal||' ' ||i.deptno);
	end loop;
end;
/

Output:

Raviraj 24000 D1
superman 22000 D1
Loki 32000 D1
